@model List<CharityHack2012.Models.CharityProfile>
@{
    var first = Model.First();
    var second = Model.Skip(1).First();
}

    <h1>Finances</h1>

<div class="row">
    <div class="span10">
        
        <h2>Income</h2>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>@first.CharityName</th>
                    <th>@second.CharityName</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Total</td>
                    <td class="@(first.Income.Total > second.Income.Total ? "winnar" : "")">£@first.Income.Total</td>
                    <td class="@(second.Income.Total > first.Income.Total ? "winnar" : "")">£@second.Income.Total</td>
                </tr>
                <tr>
                    <td>Investment gains</td>
                    <td class="@(first.Income.InvestmentGains > second.Income.InvestmentGains ? "winnar" : "")">£@first.Income.InvestmentGains</td>
                    <td class="@(second.Income.InvestmentGains > first.Income.InvestmentGains ? "winnar" : "")">£@second.Income.InvestmentGains</td>
                </tr>
                <tr>
                    <td>Trading to raise funds</td>
                    <td class="@(first.Income.TradingToRaiseFunds > second.Income.TradingToRaiseFunds ? "winnar" : "")">£@first.Income.TradingToRaiseFunds</td>
                    <td class="@(second.Income.TradingToRaiseFunds > first.Income.TradingToRaiseFunds ? "winnar" : "")">£@second.Income.TradingToRaiseFunds</td>
                </tr>
                <tr>
                    <td>Voluntary</td>
                    <td class="@(first.Income.Voluntary > second.Income.Voluntary ? "winnar" : "")">£@first.Income.Voluntary</td>
                    <td class="@(second.Income.Voluntary > first.Income.Voluntary ? "winnar" : "")">£@second.Income.Voluntary</td>
                </tr>
                <tr>
                    <td>Other</td>
                    <td class="@(first.Income.Total > second.Income.Other ? "winnar" : "")">£@first.Income.Other</td>
                    <td class="@(second.Income.Total > first.Income.Other ? "winnar" : "")">£@second.Income.Other</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

<div class="row">
    <div class="span10">
        
        <h2>Expenses</h2>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>@first.CharityName</th>
                    <th>@second.CharityName</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Total</td>
                    <td class="@(first.Expenditure.Total > second.Expenditure.Total ? "winnar" : "")">£@first.Expenditure.Total</td>
                    <td class="@(second.Expenditure.Total > first.Expenditure.Total ? "winnar" : "")">£@second.Expenditure.Total</td>
                </tr>
                <tr>
                    <td>Charitable activities</td>
                    <td class="@(first.Expenditure.CharitableActivities > second.Expenditure.CharitableActivities ? "winnar" : "")">£@first.Expenditure.CharitableActivities</td>
                    <td class="@(second.Expenditure.CharitableActivities > first.Expenditure.CharitableActivities ? "winnar" : "")">£@second.Expenditure.CharitableActivities</td>
                </tr>
                <tr>
                    <td>Investment management</td>
                    <td class="@(first.Expenditure.InvestmentManagement > second.Expenditure.InvestmentManagement ? "winnar" : "")">£@first.Expenditure.InvestmentManagement</td>
                    <td class="@(second.Expenditure.InvestmentManagement > first.Expenditure.InvestmentManagement ? "winnar" : "")">£@second.Expenditure.InvestmentManagement</td>
                </tr>
                <tr>
                    <td>Spent raising more money</td>
                    <td class="@(first.Expenditure.TradingToRaiseFunds > second.Expenditure.TradingToRaiseFunds ? "winnar" : "")">£@first.Expenditure.TradingToRaiseFunds</td>
                    <td class="@(second.Expenditure.TradingToRaiseFunds > first.Expenditure.TradingToRaiseFunds ? "winnar" : "")">£@second.Expenditure.TradingToRaiseFunds</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>
            
<div class="row">
    <div class="span10">
        <h2>Assets liabilities and People</h2>
                
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>@first.CharityName</th>
                    <th>@second.CharityName</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Own Use Assets</td>
                    <td class="@(first.AssetsLiabilitiesAndPeople.OwnUseAssets > second.AssetsLiabilitiesAndPeople.OwnUseAssets ? "winnar" : "")">£@first.AssetsLiabilitiesAndPeople.OwnUseAssets</td>
                    <td class="@(second.AssetsLiabilitiesAndPeople.OwnUseAssets > first.AssetsLiabilitiesAndPeople.OwnUseAssets ? "winnar" : "")">£@second.AssetsLiabilitiesAndPeople.OwnUseAssets</td>
                </tr>
                <tr>
                    <td>Long Term Investments</td>
