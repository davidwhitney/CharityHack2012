                    <td class="@(second.AssetsLiabilitiesAndPeople.OtherAssets > first.AssetsLiabilitiesAndPeople.OtherAssets ? "winnar" : "")">£@second.AssetsLiabilitiesAndPeople.OtherAssets</td>
                </tr>
                <tr>
                    <td>Total Liabilities</td>
                    <td class="@(first.AssetsLiabilitiesAndPeople.TotalLiabilities > second.AssetsLiabilitiesAndPeople.TotalLiabilities ? "winnar" : "")">£@first.AssetsLiabilitiesAndPeople.TotalLiabilities</td>
                    <td class="@(second.AssetsLiabilitiesAndPeople.TotalLiabilities > first.AssetsLiabilitiesAndPeople.TotalLiabilities ? "winnar" : "")">£@second.AssetsLiabilitiesAndPeople.TotalLiabilities</td>
                </tr>
                <tr>
                    <td>Employees</td>
                    <td class="@(first.AssetsLiabilitiesAndPeople.Employees > second.AssetsLiabilitiesAndPeople.Employees ? "winnar" : "")">@first.AssetsLiabilitiesAndPeople.Employees</td>
                    <td class="@(second.AssetsLiabilitiesAndPeople.Employees > first.AssetsLiabilitiesAndPeople.Employees ? "winnar" : "")">@second.AssetsLiabilitiesAndPeople.Employees</td>
                </tr>
                <tr>
                    <td>Volunteers</td>
                    <td class="@(first.AssetsLiabilitiesAndPeople.Volunteers > second.AssetsLiabilitiesAndPeople.Volunteers ? "winnar" : "")">@first.AssetsLiabilitiesAndPeople.Volunteers</td>
                    <td class="@(second.AssetsLiabilitiesAndPeople.Volunteers > first.AssetsLiabilitiesAndPeople.Volunteers ? "winnar" : "")">@second.AssetsLiabilitiesAndPeople.Volunteers</td>
                </tr>
            </tbody>
        </table>

    </div>
</div>